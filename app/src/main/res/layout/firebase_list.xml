<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_margin="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple">


    <ImageView
        android:id="@+id/firebase_news_IV"
        android:layout_width="115dp"
        android:layout_height="84dp"

        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_logo"
        android:contentDescription="@string/news_image" />

    <TextView
        android:id="@+id/firebase_news_TV"
        android:layout_width="258dp"
        android:layout_height="78dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/title"
        app:layout_constraintBottom_toBottomOf="@+id/firebase_news_IV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/firebase_news_IV"
        app:layout_constraintTop_toTopOf="@+id/firebase_news_IV" />
</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>